    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run all tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": [],
            "cwd" : "${workspaceFolder}"
        },
        {
            "name": "Run Add-EnvPath tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": ["-Tag 'Add-EnvPath'"],
            "cwd" : "${workspaceFolder}"
        },
        {
            "name": "Run Update-EnvPath tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": ["-Tag 'Update-EnvPath'"],
            "cwd" : "${workspaceFolder}"
        },
        {
            "name": "Reload",
            "type": "PowerShell",
            "request": "launch",
            "script": "Import-Module",
            "args": [".\\EnvPath.psm1 -Force -ArgumentList \"TESTMODE\""],
            "cwd": "${file}"
        }
    ]
}